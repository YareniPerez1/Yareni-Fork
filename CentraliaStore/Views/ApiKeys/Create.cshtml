@model CentraliaStore.Models.ApiKey

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ApiKey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ApiSecret" class="control-label"></label>
                <input asp-for="ApiSecret" class="form-control" />
                <span asp-validation-for="ApiSecret" class="text-danger"></span>
            </div>
               @if (User.IsInRole("Administrator"))
    {
        <div class="form-group">
            <label asp-for="AppUserId"></label>
            <select asp-for="AppUserId" asp-items="ViewBag.AppUsers" class="form-control"></select>
            <span asp-validation-for="AppUserId" class="text-danger"></span>
        </div>
    }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        </form>
    </div>
</div>

